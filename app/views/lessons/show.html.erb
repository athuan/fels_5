<h1>Lesson <%= @lesson.id %></h1>
<h3>Correct: <%= @lesson.result %> / <%= @lesson.number_questions%></h3>
<div class="row">
  <div class="span6 offset3">
    <table class="table table-bordered" id="examination-list">
      <thead>
        <tr>
          <th>result</th>
          <th>Word</th>
          <th>your's answer</th>
          <th>correct answer</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
          <tr>
            <% if Option.find(result.option_id).is_correct %>
              <td>TRUE</td>
            <% else %>
              <td>FALSE</td>
            <% end %>
            <td><%= result.word.name %></td>
            <td><%= Option.find(result.option_id).answer %></td>
            <% result.word.options.each do |option|%>
              <% if option.is_correct %>
                <td><%= option.answer %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>