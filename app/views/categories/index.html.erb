<% provide(:title, 'All categories') %>
<h1>All categories</h1>

<%= will_paginate %>

<ul class="categories">
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= category.content%>
    </li>
     <%= link_to "Start", new_lesson_path(category_id: category.id),class: "btn btn-large btn-primary" %>
  <% end %>
</ul>

<%= will_paginate %>  

